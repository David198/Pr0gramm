<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Custom size margins-->
    <Thickness x:Key="PageTitleMargin">0,0,12,7</Thickness>
    <Thickness x:Key="SettingsSubheaderMargin">0, 20, 0, 48</Thickness>
    <Thickness x:Key="TagPadding">5, 2, 5, 2</Thickness>
    <!-- Big Size Margin-->

    <Thickness x:Key="BigRightMargin">0 0 25 0</Thickness>
    <Thickness x:Key="BigLeftMargin">35 0 0 0</Thickness>

    <!--Medium size margins-->
    <Thickness x:Key="MediumLeftRightMargin">12,0,12,0</Thickness>
    <Thickness x:Key="MediumAllMargin">12,12,12,12</Thickness>
    <Thickness x:Key="MediumLeftMargin">12 0 0 0</Thickness>
    <Thickness x:Key="MediumTopDownMargin">0 12 0 12</Thickness>

    <!--Small size margins-->
    <Thickness x:Key="SmallAllMargin">5, 5, 5, 5</Thickness>

    <Thickness x:Key="SmallLeftMargin">5, 0, 0, 0</Thickness>
    <Thickness x:Key="SmallLeftRightMargin">5, 0, 5, 0</Thickness>
    <Thickness x:Key="EightTopMargin">0, 8, 0, 0</Thickness>
</ResourceDictionary>
